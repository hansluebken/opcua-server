# OPC-UA Production Server Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Grafana Configuration
# ============================================
GRAFANA_ADMIN_PASSWORD=change-me-in-production

# ============================================
# Node-RED Configuration
# ============================================
NODE_RED_CREDENTIAL_SECRET=change-me-in-production

# ============================================
# OPC-UA Server Configuration
# ============================================
OPCUA_SERVER_PORT=4840
OPCUA_SERVER_HOSTNAME=opcua.netz-fabrik.net
OPCUA_SERVER_IP=87.106.33.7

# ============================================
# SSL/TLS Configuration
# ============================================
LETSENCRYPT_EMAIL=admin@netz-fabrik.net
DOMAIN=opcua.netz-fabrik.net

# ============================================
# Security Configuration
# ============================================
# Generate with: openssl rand -base64 32
OPCUA_READER_PASSWORD=
OPCUA_OPERATOR_PASSWORD=
OPCUA_ADMIN_PASSWORD=

# ============================================
# Database Configuration (if needed)
# ============================================
POSTGRES_USER=opcua
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=opcua_production

REDIS_PASSWORD=change-me-in-production

# ============================================
# Backup Configuration
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/opcua/backup

# ============================================
# Monitoring & Alerting
# ============================================
ALERT_EMAIL=ops@netz-fabrik.net
ALERT_WEBHOOK_URL=

# ============================================
# Timezone
# ============================================
TZ=Europe/Berlin
